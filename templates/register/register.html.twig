{% extends 'base.html.twig' %}

{% block body %}
   {% block stylesheets %}
     
      <style>.gradient-custom {
/* fallback for old browsers */
background: #9d0055;

/* Chrome 10-25, Safari 5.1-6 */
background: -webkit-linear-gradient(to bottom right, rgba(240, 147, 251, 1), rgba(245, 87, 108, 1));

/* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
background: #9d0055;
}

.card-registration .select-input.form-control[readonly]:not([disabled]) {
font-size: 1rem;
line-height: 2.15;
padding-left: .75em;
padding-right: .75em;
}
.card-registration .select-arrow {
top: 13px;
}</style>
   {% endblock %}

   <section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration Form</h3>
            
            {{form_start(form )}}

              <div class="row">
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                  {{ form_label(form.emailU, 'Email') }}
         {{ form_widget(form.emailU, {'attr': {'class': 'form-control'}}) }}
         {{ form_errors(form.emailU) }}
                    
                  </div>

                </div>
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                   {{ form_label(form.mdp, 'Password') }}
         {{ form_widget(form.mdp, {'attr': {'class': 'form-control'}}) }}
         {{ form_errors(form.mdp) }}
                    
                  </div>

                </div>
              </div>
<div class="row">
                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                   {{ form_label(form.nomU, 'Nom') }}
         {{ form_widget(form.nomU, {'attr': {'class': 'form-control'}}) }}
         {{ form_errors(form.nomU) }}
                  </div>

                </div>
                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                     {{ form_label(form.prenomU, 'Prenom') }}
         {{ form_widget(form.prenomU, {'attr': {'class': 'form-control'}}) }}
         {{ form_errors(form.prenomU) }}
                  </div>

                </div>
              </div>
              <div class="row">
                <div class="col-md-6 mb-4 d-flex align-items-center">

                  <div class="form-outline datepicker w-100">
                   {{ form_label(form.DateNaissanceU, 'Date de Naissance') }}
         {{ form_widget(form.DateNaissanceU, {'attr': {'class': 'form-control'}}) }}
         {{ form_errors(form.DateNaissanceU) }}
                  </div>

                </div>
                <div class="col-md-6 mb-4 pb-2">

                 

                  
                    <div class="form-outline">
                   {{ form_label(form.sexeU, 'Sexe') }}
         {{ form_widget(form.sexeU, {'attr': {'class': 'form-control'}}) }}
         {{ form_errors(form.sexeU) }}
                  
                  </div>

                  

                </div>
              </div>

             
 <div class="form-outline">
                    
                   {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary btn-lg'}}) }}
                  
                  </div>
              

              

           
            {{form_end(form)}}
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 
{% endblock %}

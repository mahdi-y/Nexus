    <script>
    function upVoteFunction(reponse) {
    // Make an AJAX request to update the vote count
    const url = '/update-voterep';
    const data = new FormData();
    data.append('reponse', reponse);
    data.append('action', 'up');

    fetch(url, {
        method: 'POST',
        body: data,
    })
    .then(response => response.json())
    .then(data => {
        // Update the vote count in the DOM
        const voteCountElement = document.getElementById(`vote-count-${reponse}`);
        voteCountElement.innerText = data.voteCount;
    })
    .catch(error => {
        console.error('Error:', error);
    });
}

function downVoteFunction(reponse) {
    // Make an AJAX request to update the vote count
    const url = '/update-voterep';
    const data = new FormData();
    data.append('reponse', reponse);
    data.append('action', 'down');

    fetch(url, {
        method: 'POST',
        body: data,
    })
    .then(response => response.json())
    .then(data => {
        // Update the vote count in the DOM
        const voteCountElement = document.getElementById(`vote-count-${reponse}`);
        voteCountElement.innerText = data.voteCount;
    })
    .catch(error => {
        console.error('Error:', error);
    });
}

